<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Question 2"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:text="How much does your phone"
        android:textSize="22dp"
        android:textColor="@color/colorBlack"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="cost?"
        android:textSize="22dp"
        android:textColor="@color/colorBlack"
        />

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/rb_two_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:text="Under 1000" />

    <RadioButton
        android:id="@+id/rb_two_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:text="1000-1999" />

    <RadioButton
        android:id="@+id/rb_two_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:text="2000-2999" />

    <RadioButton
        android:id="@+id/rb_two_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginLeft="80dp"
        android:text="3000-3999" />

    <RadioButton
        android:id="@+id/rb_two_5"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:layout_marginTop="10dp"
        android:text="More than 4000" />

</RadioGroup>

    <Button
        android:id="@+id/button3"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="109dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary"
        android:text="NEXT"

        />
