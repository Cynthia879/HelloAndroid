<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Question 10"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold"
        />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:text="How old are you"
        android:textSize="22dp"
        android:textColor="@color/colorBlack"
        />

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <RadioButton
        android:id="@+id/rb_ten_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:text="Under 18" />

    <RadioButton
        android:id="@+id/rb_ten_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="19-25" />

    <RadioButton
        android:id="@+id/rb_ten_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="25-35" />

    <RadioButton
        android:id="@+id/rb_ten_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="beyond 35" />

</RadioGroup>

    <Button
        android:id="@+id/button11"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="211dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary"
        android:text="NEXT" />


    <!-- END    : Your code should be within this block -->

</LinearLayout>
