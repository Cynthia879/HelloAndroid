<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <!--  Start : Your code should be within this block -->
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginLeft="20dp"
        android:text="Question 3"
        android:textSize="30dp"
        android:textColor="@color/colorBlack"
        android:textStyle="bold" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="60dp"
        android:layout_marginLeft="40dp"
        android:text="What kind of phone are you"
        android:textSize="22dp"
        android:textColor="@color/colorBlack" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="40dp"
        android:text="using?"
        android:textSize="22dp"
        android:textColor="@color/colorBlack" />

<RadioGroup
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">
    <RadioButton
        android:id="@+id/rb_three_1"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="30dp"
        android:layout_marginLeft="80dp"
        android:text="2G" />

    <RadioButton
        android:id="@+id/rb_three_2"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="3G" />

    <RadioButton
        android:id="@+id/rb_three_3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="4G" />

    <RadioButton
        android:id="@+id/rb_three_4"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="80dp"
        android:text="Others" />
</RadioGroup>

    <Button
        android:id="@+id/button4"
        android:layout_width="370dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="181dp"
        android:layout_marginLeft="20dp"
        android:background="@color/colorPrimary"
        android:text="NEXT" />

    <!-- END    : Your code should be within this block -->

</LinearLayout>
